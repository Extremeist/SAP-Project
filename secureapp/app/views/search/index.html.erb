
<%= render 'search/form' %>

<div class ="container">
  <table class="table table-dark table-striped">
    <thread>
      <tr>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :body, "Blog Content") %></th>

      </tr>
    </thread>

    <tbody>
    <% @articles.each do |articles| %>
    <tr>
      <td><%= link_to articles.title, articles %></td>
      <td><%= link_to articles.body, articles %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>